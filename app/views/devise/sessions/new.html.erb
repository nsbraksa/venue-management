<div class="centered authform col-sm-10 col-md-8 col-lg-8">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign in</h3>
    <br>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="checkbox" style="width:150px">
      <label>
        <%= f.check_box :remember_me, class: 'checkbox' %> Remember me
      </label>
    </div>
    <% end -%>
    <%= f.submit 'Sign in', class: "btn btn-default right" %>
    <%- if devise_mapping.recoverable? %>
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "btn btn-default right" %>
    <% end -%>
    <%- if devise_mapping.registerable? %>
      <%= link_to 'Sign up', new_registration_path(resource_name), class: "btn btn-default right"  %>
    <% end -%>
  <% end %>
</div>
